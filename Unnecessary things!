ans = input("Enter sth to check the uppercase or lowercase of the first letter: ")

def check_letter(ans):
    if len(ans) == 0:  # اگر کاربر هیچ چیزی وارد نکرده باشد
        print("You entered nothing!")
    elif ans == ans.upper():
        print("True")
    elif ans == ans.lower():
        print("Lower Letter is False")
    else:
        print("True")

check_letter(ans)
